<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bugvictims.demo11.Mapper.RecruitLabelMapper">
    <insert id="addRecruitLabel" parameterType="com.bugvictims.demo11.Pojo.Recruit">
        INSERT INTO recruit_label (recruit_id, label, create_time, update_time)
        VALUES
        <foreach collection="label" item="labelItem" separator=",">
            (#{id}, #{labelItem}, #{createTime}, #{updateTime})
        </foreach>
    </insert>
    <update id="updateRecruitLabel" parameterType="com.bugvictims.demo11.Pojo.Recruit">
        <foreach collection="label" item="labelItem" open="" separator=";" close="">
            UPDATE recruit_label
            SET label = #{labelItem}, update_time = #{updateTime}
            WHERE recruit_id = #{id}
        </foreach>
    </update>
</mapper>